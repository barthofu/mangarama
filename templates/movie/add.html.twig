{% extends 'base.html.twig' %}

{% block title %}Ajouter Film{% endblock %}

{% block body %}

    {{ form_start(form) }}

        <div class="inputField">
            {{ form_widget(form.name, {'attr': { 'placeholder': 'Nom du film' } }) }}
            {{ form_label(form.name, 'Le nom du film') }}
            <span class="error">{{ form_errors(form.name) }}</span>
        </div>    
        
        <div class="inputField">
            {{ form_widget(form.description, {'attr': { 'placeholder': 'Description du film' } }) }}
            {{ form_label(form.description, 'La description du film') }}
            <span class="error">{{ form_errors(form.description) }}</span>
        </div>
        
        <div class="inputField">
            {{ form_widget(form.score, {'attr': { 'placeholder': 'Score du film' } }) }}
            {{ form_label(form.score, 'Le score du film') }}
            <span class="error">{{ form_errors(form.score) }}</span>
        </div>   

        <div class="inputField">
            {{ form_widget(form.image) }}
        </div>
        
        <div class="inputField">
            <input type="submit" name="" value="Enregistrer" class="submitButton">
        </div>

    {{ form_end(form) }}

{% endblock %}
